<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        //MainSponsor

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mainSponsorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/mainSponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Main Sponsor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#273e1f"
                android:textSize="35dp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/mainSponsorLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/linha" />


        </TableLayout>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/silverSponsorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainSponsorLayout">

            <TextView
                android:id="@+id/silverSponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mainSponsorLine"
                android:gravity="center"
                android:text="Silver Sponsor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#273e1f"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/silverSponsorLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/linha" />

        </TableLayout>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/sponsorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/silverSponsorLayout">

            <TextView
                android:id="@+id/sponsor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sponsor"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#273e1f"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/sponsorLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/linha" />


            <ImageButton

                android:id="@+id/itgrow"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:adjustViewBounds="true"
                android:autoLink="web"

                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="gotoitGrow"
                android:scaleType="centerInside"
                android:src="@drawable/itgrow" />

            <ImageButton

                android:id="@+id/shoyce"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:autoLink="web"

                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="gotoshoyce"
                android:scaleType="centerInside"
                android:src="@drawable/shoyce" />


            <ImageButton

                android:id="@+id/tugabox"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="40dp"
                android:adjustViewBounds="true"
                android:autoLink="web"

                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="gototugaBox"
                android:scaleType="centerInside"
                android:src="@drawable/tugabox" />

            <ImageButton
                android:id="@+id/mirtiflor"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="true"
                android:autoLink="web"

                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="gotomirtiflor"
                android:scaleType="centerInside"
                android:src="@drawable/mirtiflor" />

            <ImageButton
                android:id="@+id/diatosta"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="true"
                android:autoLink="web"

                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="gotodiatosta"
                android:scaleType="centerInside"
                android:src="@drawable/diatosta" />

        </TableLayout>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/instPartnersLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sponsorLayout">

            <TextView
                android:id="@+id/instPartner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Institutional Partner"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#273e1f"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/intPartnersLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/linha" />

            <ImageButton

                android:id="@+id/ua"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:autoLink="web"

                android:src="@drawable/logo_ua"
                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="gotoua"
                android:scaleType="centerInside"/>

            <ImageButton

                android:id="@+id/ipdj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="45dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:adjustViewBounds="true"
                android:autoLink="web"

                android:src="@drawable/ipdj"
                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="gotoipdj"/>

            <ImageButton

                android:id="@+id/aauav"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:autoLink="web"

                android:src="@drawable/aauav"
                android:background="@null"
                android:clickable="true"
                android:cursorVisible="true"
                android:linksClickable="true"
                android:onClick="gotoaauav"
                android:scaleType="centerInside"/>


        </TableLayout>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mediaPartnerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/instPartnersLayout"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/mediaPartner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Media Partener"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#273e1f"
                android:textSize="35dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mediaPartnerLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/linha" />

        </TableLayout>
    </RelativeLayout>

</ScrollView>