<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuInitial"
    android:background="#ffffff">

    <Space
        android:id="@+id/viewMiddleInvisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#ffffff"
        android:src="@drawable/lanternaacesa"
        android:id="@+id/background"
        android:scaleType="centerInside"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonshape"
        android:adjustViewBounds="true"
        android:id="@+id/desligarButton"
        android:scaleType="centerInside"
        android:src="@drawable/onoff"
        android:layout_toLeftOf="@id/viewMiddleInvisible"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:adjustViewBounds="true"
        android:id="@+id/entrarButton"
        android:scaleType="center"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_toRightOf="@id/viewMiddleInvisible"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>
