<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageviewfundo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logoinnov2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No final do evento, dia 3 de novembro às 19h, haverá espaço para os participantes comunicarem com as entidades e oradores presentes, de forma a estabelecerem contactos e melhor perceberem a perspetiva dos empreendedores, de acordo com as preferências profissionais de cada um."
        android:id="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="23dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cocktail Network"
        android:textSize="33dp"
        android:id="@+id/textView13"
        android:textColor="#273e1f"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageviewfundo"
        android:layout_marginLeft="70dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="87dp"
        android:id="@+id/image4"
        android:layout_marginTop="0dp"
        android:background="@drawable/logocomtransparencia"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
