<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bestaveiro.innovationnow">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logocomtransparencia"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MenuInitial"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuButtons"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Innov"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".Lanterna"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bestaveiro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Programa.programa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Notifications"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Parceiros"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Atividades"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Fotos.Fotografias"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Programa.OradoresActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Showroom"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Casestudy"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Pitching"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Cocktail"
            android:screenOrientation="portrait"></activity>

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".Fotos.ShowPhoto"></activity>
        <activity android:name=".SpeakerInfo"></activity>
    </application>

</manifest>